{
  "name": "tag-version-commit",
  "version": "1.6.1",
  "private": true,
  "description": "GitHub action for tagging commits whose title matches a version regex",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "all": "npm run build && npm run format-check && npm run lint && npm run pack && npm run test-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christophebedard/tag-version-commit.git"
  },
  "keywords": [
    "github",
    "actions",
    "git",
    "tag",
    "version"
  ],
  "author": "Christophe Bedard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christophebedard/tag-version-commit/issues"
  },
  "homepage": "https://github.com/christophebedard/tag-version-commit#readme",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/nock": "^11.1.0",
    "@types/node": "^15.12.4",
    "@typescript-eslint/parser": "^4.28.1",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.29.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^24.9.0",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.1.0",
    "nock": "^13.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^24.2.0",
    "typescript": "^4.3.4"
  }
}
